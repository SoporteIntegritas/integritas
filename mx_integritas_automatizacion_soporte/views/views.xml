<odoo>
  <data noupdate="1">
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="mx_integritas_automatizacion_email_soporte">
      <field name="name">mx_integritas_automatizacion_email_soporte</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_form2"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='extra_info']//group[1]//group[2]" position="before">
          <field name="fecha_limite_pruebas" string="Date Limit"/>
        </xpath>
      </field>
    </record>
    
    <record id="unique_name" model="ir.cron">
      <field name="name">Aviso fin de pruebas</field>
      <field eval="True" name="active" />
      <field name="user_id" ref="base.user_root" />
      <field name="interval_number">24</field>
      <field name="interval_type">hours</field>
      <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 05:00:00')" />
      <field name="numbercall">1</field>
      <field  ref="model_project_task"  name="model_id"  />
      <field name="state">code</field>
      <field name="code">model.enviar_email()</field>
      <field eval="False" name="doall"/>
      <field name="function">True</field>
    
    </record>
    
